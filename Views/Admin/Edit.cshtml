@model Hotel_Management_System.Models.Reservation

<h2>Edit Reservation</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="CheckInDate">Check-in Date</label>
        <input asp-for="CheckInDate" class="form-control" />
        <span asp-validation-for="CheckInDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CheckOutDate">Check-out Date</label>
        <input asp-for="CheckOutDate" class="form-control" />
        <span asp-validation-for="CheckOutDate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumberOfRooms">Number of Rooms</label>
        <input asp-for="NumberOfRooms" class="form-control" />
        <span asp-validation-for="NumberOfRooms" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomFloor">Room Floor</label>
        <input asp-for="RoomFloor" class="form-control" />
        <span asp-validation-for="RoomFloor" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumberOfAdults">Number of Adults</label>
        <input asp-for="NumberOfAdults" class="form-control" />
        <span asp-validation-for="NumberOfAdults" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NumberOfChildren">Number of Children</label>
        <input asp-for="NumberOfChildren" class="form-control" />
        <span asp-validation-for="NumberOfChildren" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="RoomType">Room Type</label>
        <input asp-for="RoomType" class="form-control" />
        <span asp-validation-for="RoomType" class="text-danger"></span>
    </div>

    <button type="submit">Save</button>
</form>
<style>
    /* Style for form container */
    .form-container {
        max-width: 400px;
        margin: 0 auto;
    }

    /* Style for form inputs */
    .form-group {
        margin-bottom: 20px;
    }

    /* Style for labels */
    label {
        display: block;
        font-weight: bold;
    }

    /* Style for input fields */
    .form-control {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        box-sizing: border-box;
    }

    /* Style for validation messages */
    .text-danger {
        color: red;
        font-size: 12px;
    }

    /* Style for submit button */
    .btn-primary {
        background-color: #FED8B1;
        color: black;
        padding: 10px 20px;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

        .btn-primary:hover {
            background-color: #FED8B1;
        }
</style>